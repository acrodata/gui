{
  "type": {
    "type": "buttonToggle",
    "name": "Type",
    "options": [
      {
        "label": "Linear",
        "value": "linear"
      },
      {
        "label": "Radial",
        "value": "radial"
      },
      {
        "label": "Conic",
        "value": "conic"
      }
    ],
    "default": "linear"
  },
  "repeating": {
    "type": "switch",
    "name": "Repeating",
    "default": false
  },
  "reverse": {
    "type": "switch",
    "name": "Reverse",
    "default": false
  },
  "angle": {
    "type": "slider",
    "name": "Angle",
    "min": 0,
    "max": 360,
    "suffix": "deg",
    "default": 90,
    "showIf": {
      "conditions": [
        [
          "type",
          "$ne",
          "radial"
        ]
      ]
    }
  },
  "shape": {
    "type": "buttonToggle",
    "name": "Shape",
    "options": [
      {
        "value": "ellipse",
        "label": "Ellipse"
      },
      {
        "value": "circle",
        "label": "Circle"
      }
    ],
    "default": "ellipse",
    "showIf": {
      "conditions": [
        [
          "type",
          "$eq",
          "radial"
        ]
      ]
    }
  },
  "size": {
    "type": "select",
    "name": "Shape",
    "options": [
      {
        "value": "closest-side",
        "label": "closest-side"
      },
      {
        "value": "closest-corner",
        "label": "closest-corner"
      },
      {
        "value": "farthest-side",
        "label": "farthest-side"
      },
      {
        "value": "farthest-corner",
        "label": "farthest-corner"
      }
    ],
    "default": "farthest-corner",
    "showIf": {
      "conditions": [
        [
          "type",
          "$eq",
          "radial"
        ]
      ]
    }
  },
  "position": {
    "type": "inline",
    "name": "Position",
    "children": {
      "x": {
        "type": "slider",
        "name": "X",
        "min": 0,
        "max": 100,
        "suffix": "%",
        "default": 50
      },
      "y": {
        "type": "slider",
        "name": "Y",
        "min": 0,
        "max": 100,
        "suffix": "%",
        "default": 50
      }
    },
    "showIf": {
      "conditions": [
        [
          "type",
          "$ne",
          "linear"
        ]
      ]
    }
  },
  "stops": {
    "type": "tabs",
    "name": "Color stops",
    "default": [
      {
        "color": "white",
        "offset": "0%"
      },
      {
        "color": "black",
        "offset": "100%"
      }
    ],
    "template": {
      "name": "Stop <%= i + 1 %>",
      "children": {
        "color": {
          "type": "fill",
          "mode": "solid",
          "name": "Color",
          "default": "#000"
        },
        "offset": {
          "type": "text",
          "name": "Offset",
          "default": "0%"
        }
      }
    }
  }
}
